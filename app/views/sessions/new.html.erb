<div class="login_signup_form_box">
	<h2>Log In</h2>
	
	<br/>
	<%= form_tag sessions_path do %>
		
		<div class="field">
			<%= label_tag :email %><br/>
			<%= text_field_tag :email, params[:email] %>
		</div>
		<div class="field">
			<%=label_tag :password %><br/>
			<%= password_field_tag :password %>
		</div>
		<br/>
		<div class="actions"><%= submit_tag "Log in" %></div>
	<% end %>
</div>