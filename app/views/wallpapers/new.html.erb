<div id="test"></div>
<div id="container">
	<div id="arrow_left"><%= image_tag("left.png") %></div>

	<%= form_for @wallpaper do |f| %>
		<div id="quote_field">
			<%= f.text_area :quote, placeholder: "Enter a quote" %>
		</div>

		<div id="colour_field">	
			<div id="swatch_wrapper">
				<a href="#">	
					<div class="swatch">
						<div></div>
						<div></div>
						<div></div>
						<%= f.hidden_field :colour_scheme_id, value: :colour_scheme[0] %>
						<!-- :colour_scheme_id  @colour_schemes[0].id from the old code --> 
					</div>
				</a>
				
				<div class="swatch">
					<a href="#">
						<div></div>
						<div></div>
						<div></div>
						<%= f.hidden_field :colour_scheme_id, value: :colour_scheme[1] %>
					  <!-- :colour_scheme_id, @colour_schemes[1].id -->
					</a>
				</div>
				
				
				<div class="swatch">
					<a href="#">
						<div></div>
						<div></div>
						<div></div>
						<%= f.hidden_field :colour_scheme_id, value: :colour_scheme[2] %>						
					</a>
				</div>
			</div>
		</div>

		<div id="layout_field">
			<%= f.label "top" %>
			<%= f.radio_button :layout_scheme, "top" %>
			<%= f.label "middle" %>
			<%= f.radio_button :layout_scheme, "middle" %>
			<%= f.label "bottom" %>
			<%= f.radio_button :layout_scheme, "bottom" %>
		</div>
		
		<div id="submit_field">
			<%= f.submit "Preview", id: "preview" %>
		</div>	
	<% end %>
	
	<div id="arrow_right"><%= image_tag("right.png") %></div>
</div>