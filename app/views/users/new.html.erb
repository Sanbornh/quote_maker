<div class="login_signup_form_box">
	<h2>Sign Up</h2>

	<%= form_for @user do |f| %>
		
		<%= render 'errors' %>
		
		<div class="field">
			<%= f.label :name %><br/>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<%= f.label :email %><br/>
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %><br/>
			<%= f.password_field :password %>
		</div>
		<div class="field">
			<%= f.label :password_confirmation %><br/>
			<%= f.password_field :password_confirmation %>
		</div><br/>
		<div class="field">
			<%= f.submit "Thanks" %>
		</div>

	<% end %>
</div>